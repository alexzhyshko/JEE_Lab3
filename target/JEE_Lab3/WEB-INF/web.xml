<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">
	<display-name>JEE_Lab3</display-name>
	<servlet>
		<servlet-name>CurrencyExchangeServlet</servlet-name>
		<servlet-class>com.example.servlet.ExchangeRateOfCurrenciesServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CurrencyExchangeServlet</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ExchangeRateOfCurrenciesForPeriodServlet</servlet-name>
		<servlet-class>com.example.servlet.ExchangeRateOfCurrenciesForPeriodServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ExchangeRateOfCurrenciesForPeriodServlet</servlet-name>
		<url-pattern>/home/currencies_for_period</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>/curr.jsp</welcome-file>
	</welcome-file-list>
</web-app>